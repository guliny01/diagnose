<!-- index.html -->
{% extends 'base.html' %}
{% block title %} 欢迎光临诊断系统{% endblock %}
{% block headmessage %} 
    <h3 style='font-family:楷体;'>产品服务列表</h3>
{% endblock %}
{% block content %} 
    {% for post in posts %}
        <div class='panel panel-default'>
            <div class='panel-heading'>
                <p style='font-family:微软雅黑;font-size:14pt;font-weight:bold;'>
                    <a href='/post/{{post.name}}'>{{ post.description }}</a>
                </p>
            </div>
            <div class='panel-body' style='background-color:#ffffdd'>
                <p>
                   {{ post.comment | truncatechars:40 }}
                </p>
            </div>
            <div class='panel-footer'  style='background-color:#efefef'>
                <p>
                    技术联系人：{{ post.contact}}
                </p>
            </div>
        </div>
        <br>
    {% endfor %}
{% endblock %}
